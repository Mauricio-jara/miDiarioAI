<div class="w-full max-w-6xl mx-auto p-12">
  <div class="w-full max-w-6xl mx-auto backdrop-blur-md bg-white/30 shadow-lg rounded-2xl">
    <div class="w-full flex flex-col md:flex-row items-center gap-4 p-6">
      <img src="/public/logo.png" alt="MiDiarioAi" class="w-full md:w-1/2 object-cover rounded-3xl" />
      <div class="w-full md:w-1/2">
        <form id="login-form" class="w-full p-6 space-y-4">
          <h2 class="text-lg font-bold">Iniciar sesión</h2>

          <label class="block">
            Nombre de usuario:
            <input
              type="text"
              name="username"
              class="border w-full p-2 rounded mt-1"
              required
            />
          </label>

          <label class="block">
            Contraseña:
            <input
              type="password"
              name="password"
              class="border w-full p-2 rounded mt-1"
              required
            />
          </label>

          <button
            type="submit"
            class="bg-[#7EBAFF] text-black px-4 py-2 rounded"
          >
            Iniciar sesión
          </button>
        </form>

        <div class="mt-4 text-center">
          <a href="/register" class=" hover:text-[#7EBAFF]">
            ¿No tienes cuenta? Regístrate
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
